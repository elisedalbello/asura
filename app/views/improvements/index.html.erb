<p id="notice"><%= notice %></p>

<h1>Listing Improvements</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @improvements.each do |improvement| %>
      <tr>
        <td><%= improvement.name %></td>
        <td><%= link_to 'Show', improvement , {:class => 'btn btn-primary'}%></td>
        <td><%= link_to 'Edit', edit_project_improvements_path(improvement), {:class => 'btn btn-warning'} %></td>
        <td><%= link_to 'Destroy', improvement, method: :delete, data: { confirm: 'Are you sure?' }, {:class => 'btn btn-danger'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Improvement', new_project_improvements_path, {:class => 'btn btn-primary'} %>
