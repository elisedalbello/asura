<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li><%= link_to 'My Projects', projects_path %></li>
</ol>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Improvements</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td><%= project.name %></td>
            <td><%= project.improvements.size %></td>
            <td>
            <div class="btn-group" role="group">
            <%= link_to 'View', project, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_project_path(project) , :class => 'btn btn-warning' %>
            <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            </div>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<br>
<button class="btn btn-primary" data-toggle="modal" data-target="#project-form" >New Project</button>
<div class="modal fade" id="project-form">
    <div class="modal-dialog">
        <div class="modal-content">
            <%= form_for(Project.new) do |f| %>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Improvement</h4>
            </div>

            <div class="modal-body">

                <div class="field">
                    <%= f.label :name %><br>
                    <%= f.text_field :name %>
                </div>

            </div>

            <div class="modal-footer">
                <%= f.submit 'Save', :class => 'btn btn-primary' %>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <% end %>
        </div>
    </div>
</div>