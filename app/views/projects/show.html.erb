<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<ul>
<% @project.improvements.each do |improvement| %>
	<li>
	<%= improvement.name %>
	<%= link_to 'Show', project_improvement_path(@project, improvement) %> |
	</li>
<% end %>
</ul>

<%= form_for([@project, @project.improvements.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
